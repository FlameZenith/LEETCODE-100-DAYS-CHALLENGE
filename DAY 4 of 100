26. Remove Duplicates from Sorted Array

class Solution {
    public int removeDuplicates(int[] nums) {
        if (nums.length == 0) return 0;

        int steps = 1; // first element is always unique

        for (int i = 1; i < nums.length; i++) {
            if (nums[i] != nums[i - 1]) {
                nums[steps] = nums[i];
                steps++;
            }
        }

        return steps;
    }
}
